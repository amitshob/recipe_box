

<form action="/tags" method="post">
  <label for="tag">Tag Name:</label>
  <input id="tag" name="tag" type="text">

  <button type="submit" class="btn btn-success">Add Tag</button>
</form>

<ul>
  <% if @tags %>
    <% @tags.each() do |tag| %>
    <li><a href="/tags/<%= tag.id %>"><%= tag.name() %></a></li>
    <% end %>
  <% end %>
</ul>




